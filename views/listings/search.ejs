<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h4>Search results for "<%= searchQuery %>"</h4>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3">
    <% for(let list of listings) { %>
    <a href="http://localhost:8080/listings/<%=list._id%>" class="listing-link">
      <div class="col">
        <div class="card h-100">
          <img src="<%= list.image.url %>" class="card-img-top" />
          <div class="card-body">
            <h5><%= list.title %></h5>
            <p><%= list.location %></p>
          </div>
        </div>
      </div>
    </a>

    <% } %>
  </div>
</div>
